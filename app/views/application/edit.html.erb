<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>New Movie</h1>
        <form action="/update_movies/<%=@movie.id%>">
          <input type="text" name="imdb" placeholder="IMDB URL" class="form-control" value="<%=@movie.imdb%>">
          <input type="text" name="image" placeholder="Image URL" class="form-control" value="<%=@movie.image%>">
          <input type="text" name="name" placeholder="Title of movie" class="form-control" value="<%=@movie.name%>">
          <input type="submit">
        </form>
      </div>
    </div>
  </div>